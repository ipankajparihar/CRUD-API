<div>
  <form action="/add/register/course_id" method="POST">
    <input type="name" name="name" placeholder="employee name" />
    <input type="email" name="email" placeholder="email" />

    <select name="course_id">
      <% for (const course of courses) { %>
      <option value="<%= course.course_id %>"><%= course.course_name %></option>
      <% } %>
    </select>

    <button type="submit">Course Registration</button>
  </form>
</div>

<div class="course-allocation">
  <h2>Allocate the course</h2>
  <form action="/allot/course_id" method="POST">
    <select name="course_id">
      <% for (const course of courses) { %>
      <option value="<%= course.course_id %>"><%= course.course_name %></option>
      <% } %>
    </select>

    <button type="submit">Allocate</button>
  </form>
</div>
